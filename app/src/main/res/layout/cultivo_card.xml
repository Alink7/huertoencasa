<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="10sp"
    card_view:cardUseCompatPadding="true">

    <TextView
        android:id="@+id/data_cultivo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cultivo 1"
        android:textSize="30sp"
        android:layout_gravity="center|top"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/data_cultivo_largo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="30sp"
        android:text="Largo: 20cm"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/data_cultivo_ancho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ancho: 40cm"
        android:layout_gravity="left"
        android:layout_marginTop="60sp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/data_cultivo_profundidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profundidad: 3cm"
        android:layout_gravity="left"
        android:layout_marginTop="90sp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/data_cultivo_suelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suelo: Tierra de hojas"
        android:layout_gravity="right"
        android:layout_marginTop="50sp"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: 07/07/16"
        android:layout_gravity="right"
        android:layout_marginTop="80sp"
        android:textSize="16sp"
        />

</android.support.v7.widget.CardView>