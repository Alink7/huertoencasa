<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alink.huerto">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- COMENTARIO DE PRUEBA -->
    <!-- COMENTARIO DE PRUEBA2 -->
    <!-- COMENTARIO DE PRUEBA3 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PrincipalActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WelcomeActivity" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".PrincipalActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alink.huerto.PrincipalActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alink.huerto.PrincipalActivity" />
        </activity>
        <activity
            android:name=".CrearCultivoActivity"
            android:label="Nuevo cultivo"
            android:parentActivityName=".PrincipalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alink.huerto.PrincipalActivity" />
        </activity>
        <activity android:name=".PerfilActivity" />

        <activity
            android:name=".ListaDePlantasActivity"
            android:label="Lista de Plantas">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alink.huerto.PrincipalActivity" />
        </activity>

        <activity
            android:name=".DetallePlantaActivity"
            android:label="Detalle de la Planta">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alink.huerto.ListaDePlantasActivity" />
        </activity>

        <activity
            android:name=".AgregarACultivoActivity"
            android:label="AsignaciÃ³n de la planta al cultivo">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alink.huerto.ListaDePlantasActivity" />
        </activity>

    </application>

</manifest>